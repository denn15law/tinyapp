<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success d-flex justify-content-between">
    <div class= 'd-flex'>
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <% if (user){ %>
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          <% } else { %>
            <a class="nav-item nav-link" href="/login">Create New URL</a>
          <% } %>
        </div>
      </div>
    </div>
    <div class="d-flex align-self-center">
      <% if(user) { %>
        <p class="px-5 font-weight-bold">Logged in As: <%= user.email %>!</p>
        <form action="/logout" method="POST">
          <button class="btn btn-outline-dark" type="submit">Logout</button>
        </form>
      <% } else{ %>
        <a href="/login" class="mx-2">
          <button class="btn btn-secondary">Login</button>
        </a>
        <a href="/register" class="mx-2">
          <button class="btn btn-primary">Register</button>
        </a>
      <% } %>
    </div>
  </nav>
</header>